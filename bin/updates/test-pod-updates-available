#!/usr/bin/env bash

PROJECT_DIRECTORY=${PROJECT_DIRECTORY:-../../ios}

POD_OUTDATED_OUTPUT=$(arch -x86_64 pod outdated --project-directory=${PROJECT_DIRECTORY})

POD_UPDATES_OUTPUT=$(echo "${POD_OUTDATED_OUTPUT}" | grep "[0-9]\+.[0-9]\+.[0-9]\+ ->")

PODS_KEPT_BACK=$(echo "${POD_UPDATES_OUTPUT}" | awk '{if ($3 == $5) { print $2" "$3} }')
PODS_UPDATE_AVAILABLE=$(echo "${POD_UPDATES_OUTPUT}" | awk '{if ($3 != $5) { print $2" "$3" -> "$5} }')

NUMBER_OF_UPDATES_AVAILABLE=$(echo ${PODS_UPDATE_AVAILABLE} | wc -l)

printf "Kept back:\n${PODS_KEPT_BACK:-None}"
printf "\n\n"
printf "Updates available:\n${PODS_UPDATE_AVAILABLE:-None}\n"


[[ $PODS_UPDATE_AVAILABLE && $NUMBER_OF_UPDATES_AVAILABLE -ge 1 ]]

